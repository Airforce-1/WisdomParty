<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@drawable/homepage_top_background" >

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/top_imageview_height"
            android:layout_height="@dimen/top_imageview_height"
            android:layout_marginLeft="@dimen/top_imageview_distance"
            android:layout_marginTop="@dimen/top_imageview_distance"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_marginLeft="@dimen/top_height"
            android:layout_marginRight="@dimen/top_height"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/str_inter_party_online"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inter_party_background"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="入党宣誓词"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="    我志愿加入中国共产党，拥护党的纲\n领，遵守党的章程，履行党员义务，执\n行党的决定，严守党的纪律，保守党的\n秘密，对党忠诚，积极工作，为共产主\n义奋斗终身，随时准备为党和人民牺牲\n一切，永不叛党。"
            android:textColor="#000000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/member_transform_left" />

            <Button
                android:id="@+id/btn_inter_confirm"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/member_transform_middle"
                android:text="@string/transform"
                android:textColor="@color/member_transform_yellow"
                android:textSize="@dimen/member_transform_size" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/member_transform_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>