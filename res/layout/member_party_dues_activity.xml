                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/b1" />

                    <ImageView
                        android:id="@+id/image_dot_7"
                        android:layout_width="0dp"
