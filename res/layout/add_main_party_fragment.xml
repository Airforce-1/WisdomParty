<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@drawable/homepage_top_background" >

        <ImageView
            android:id="@+id/image_search"
            android:layout_width="@dimen/top_imageview_height"
            android:layout_height="@dimen/top_imageview_height"
            android:layout_marginLeft="@dimen/top_imageview_distance"
            android:layout_marginTop="@dimen/top_imageview_distance"
            android:src="@drawable/homepage_search" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_marginLeft="@dimen/top_height"
            android:layout_marginRight="@dimen/top_height"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/str_party"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/image_setting"
            android:layout_width="@dimen/top_imageview_height"
            android:layout_height="@dimen/top_imageview_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/top_imageview_distance"
            android:layout_marginTop="@dimen/top_imageview_distance"
            android:src="@drawable/homepage_setting" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_top_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/add_top_image"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lin_zuzhishenghuo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_four"
                    android:layout_height="@dimen/add_four"
                    android:src="@drawable/zuzhishenghuo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_four_text_top"
                    android:text="组织生活"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_huanjiexuanju"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_four"
                    android:layout_height="@dimen/add_four"
                    android:src="@drawable/huanjiexuanju" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_four_text_top"
                    android:text="换届选举"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_dangyuanguanli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_four"
                    android:layout_height="@dimen/add_four"
                    android:src="@drawable/dangyuanguanli" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_four_text_top"
                    android:text="党员管理"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_mingzhupingyi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_four"
                    android:layout_height="@dimen/add_four"
                    android:src="@drawable/minzhupingyi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_four_text_top"
                    android:text="民主评议"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#fff8ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lin_dangyuanjiangcheng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_six"
                    android:layout_height="@dimen/add_six"
                    android:src="@drawable/jiangcheng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_six_text_top"
                    android:text="党员奖惩"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff8ff" />

            <LinearLayout
                android:id="@+id/lin_kunnanbuzhu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_six"
                    android:layout_height="@dimen/add_six"
                    android:src="@drawable/buzhu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_six_text_top"
                    android:text="困难补助"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff8ff" />

            <LinearLayout
                android:id="@+id/lin_chuangxianzhengyou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_six"
                    android:layout_height="@dimen/add_six"
                    android:src="@drawable/chuangxianzhengyou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_six_text_top"
                    android:text="创先争优"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff8ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lin_zhuanxianghuodong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_six"
                    android:layout_height="@dimen/add_six"
                    android:src="@drawable/huodong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_six_text_top"
                    android:text="专项活动"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff8ff" />

            <LinearLayout
                android:id="@+id/lin_zaixianrudang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_six"
                    android:layout_height="@dimen/add_six"
                    android:src="@drawable/rudang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_six_text_top"
                    android:text="在线入党"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff8ff" />

            <LinearLayout
                android:id="@+id/lin_dangyuanjiaoyu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/add_six"
                    android:layout_height="@dimen/add_six"
                    android:src="@drawable/jiaoyu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/add_six_text_top"
                    android:text="党员教育"
                    android:textColor="@color/add_manager"
                    android:textSize="@dimen/add_four_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>