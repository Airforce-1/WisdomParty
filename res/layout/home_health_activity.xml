<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@drawable/homepage_top_background" >

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/top_imageview_height"
            android:layout_height="@dimen/top_imageview_height"
            android:layout_marginLeft="@dimen/top_imageview_distance"
            android:layout_marginTop="@dimen/top_imageview_distance"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_marginLeft="@dimen/top_height"
            android:layout_marginRight="@dimen/top_height"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/str_home_health"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_viewpaper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible" >

        <wuxc.wisdomparty.layout.Childviewpaper
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dotbar_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot4"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot5"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot6"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot7"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot8"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot9"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot10"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/lin_dynamic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/dynamic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="网上药店"
                    android:textColor="#000000"
                    android:textSize="@dimen/member_transform_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_dynamic_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textColor="#9c9c9c"
                    android:textSize="@dimen/member_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_dynamic_detail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="网上药店，新型购药模式，让医疗更便捷"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/member_text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/lin_appearance"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/appearance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="养生专栏"
                    android:textColor="#000000"
                    android:textSize="@dimen/member_transform_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_appearance_detail"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="提供养生信息，提倡健康生活"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/member_text_size" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rela_webmedical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/image_left"
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:background="@color/member_transform_party_top_red" />

                    <TextView
                        android:id="@+id/text_webmedical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/image_left"
                        android:gravity="center_vertical"
                        android:text="网上药店"
                        android:textColor="#000000"
                        android:textSize="@dimen/member_transform_size" />

                    <TextView
                        android:id="@+id/text_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:text="查看更多"
                        android:textColor="@color/member_transform_party_top_red"
                        android:textSize="@dimen/member_text_size" />

                    <ImageView
                        android:id="@+id/image_right"
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/image_right_white" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_webmedical"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/lin_webmedical_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/health" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:text="医药总公司走访慰问活动"
                                android:textColor="#000000"
                                android:textSize="@dimen/member_transform_size" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:text="及时为广大人民群众的生产生活提供优质服务,进一步加快群众致富的步伐。二是坚持正确的群众观,摆正领导与引导的关系。"
                                android:textColor="@color/member_transform_stroke"
                                android:textSize="@dimen/member_text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/background_grey" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/lin_webmedical_right_top"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:text="医药总公司走访慰问活动"
                                android:textSize="@dimen/member_transform_size" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/health" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background_grey" />

                        <LinearLayout
                            android:id="@+id/lin_webmedical_right_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:layout_weight="2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/health" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:text="医药总公司走访慰问活动"
                                android:textSize="@dimen/member_transform_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rela_health"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/image__health_left"
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:background="@color/member_transform_party_top_red" />

                    <TextView
                        android:id="@+id/text_health"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/image__health_left"
                        android:gravity="center_vertical"
                        android:text="养生专栏"
                        android:textColor="#000000"
                        android:textSize="@dimen/member_transform_size" />

                    <TextView
                        android:id="@+id/text_more_health"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:text="查看更多"
                        android:textColor="@color/member_transform_party_top_red"
                        android:textSize="@dimen/member_text_size" />

                    <ImageView
                        android:id="@+id/image_health_right"
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/image_right_white" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_health"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/lin_health_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/health" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/background_grey" />

                    <LinearLayout
                        android:id="@+id/lin_health_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:text="养生推荐内容或标题名称"
                            android:textSize="@dimen/member_transform_size" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="25dp"
                            android:layout_weight="2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/health" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#ffffff" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_grey"
                android:visibility="gone" />

            <ListView
                android:id="@+id/list_data"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:divider="#00000000"
                android:scrollbars="none"
                android:visibility="gone" >
            </ListView>

            <TextView
                android:id="@+id/text_warning"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/line1"
                android:gravity="center"
                android:textColor="@color/member_transform_stroke"
                android:textSize="@dimen/member_text_size"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>