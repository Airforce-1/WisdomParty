                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/member_transform_party_symbol" />

                <LinearLayout
                    android:id="@+id/lin_number_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
