<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@drawable/homepage_top_background" >

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/top_imageview_height"
            android:layout_height="@dimen/top_imageview_height"
            android:layout_marginLeft="@dimen/top_imageview_distance"
            android:layout_marginTop="@dimen/top_imageview_distance"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_marginLeft="@dimen/top_height"
            android:layout_marginRight="@dimen/top_height"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/str_home_youth"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_viewpaper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible" >

        <wuxc.wisdomparty.layout.Childviewpaper
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dotbar_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot4"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot5"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot6"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot7"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot8"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot9"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/dot10"
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:background="@drawable/dotn"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
 <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:id="@+id/lin_dynamic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/dynamic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="动态信息"
                    android:textColor="#000000"
                    android:textSize="@dimen/member_transform_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_dynamic_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textColor="#9c9c9c"
                    android:textSize="@dimen/member_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_dynamic_detail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/member_text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/lin_appearance"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/appearance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="团员风采"
                    android:textColor="#000000"
                    android:textSize="@dimen/member_transform_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_appearance_detail"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/member_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>