<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@drawable/homepage_top_background" >

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/top_imageview_height"
            android:layout_height="@dimen/top_imageview_height"
            android:layout_marginLeft="@dimen/top_imageview_distance"
            android:layout_marginTop="@dimen/top_imageview_distance"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:layout_marginLeft="@dimen/top_height"
            android:layout_marginRight="@dimen/top_height"
            android:gravity="center"
            android:singleLine="true"
            android:text="选项信息"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dove_background"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/shape_10"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <wuxc.wisdomparty.layout.RoundImageView
                    android:id="@+id/round_headimg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/item_headimg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="吴奇隆"
                            android:textColor="#000000"
                            android:textSize="@dimen/big_text"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/image_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/small_symbol"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/text_party_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="共产党员"
                            android:textSize="@dimen/member_transform_size"
                            android:visibility="gone" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/text_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="当前票数：65"
                            android:textColor="@color/member_transform_party_top_red"
                            android:textSize="@dimen/member_transform_size" />

                        <ImageView
                            android:id="@+id/image_selected"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/select_him" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/member_transform_stroke" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="简介"
                android:textColor="#000000"
                android:textSize="@dimen/big_text"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:scrollbars="none" >

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李志高，男，1967年生，湖北人。工学博士、高级工程师。因受《红岩》影响，进入重庆大学。李志高是目前中国国内IT业界最大的网站-新天极网的首席执行官，同时还兼任《电脑报》社副社长。在整个IT业界，李志高的名气并不是很响。这与《电脑报》身处内地，李本人又不善炒作和张扬有关。但天极网今年第四次蝉联CNNIC评选的中国互联网络十佳网站，并且是唯一入选的专业IT网站，不得不令IT界对其聚焦了。李志高被誉为是传统媒体中最早觉醒过来的人之一。"
                    android:textSize="@dimen/member_transform_size" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>