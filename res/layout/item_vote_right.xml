<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_10_white_grey_stroke" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image_headimg"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vote" />

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:maxLines="5"
                    android:text="“优秀共产党员”是一种荣誉称号，通常授予表现优秀、工作成绩突出，能起到带头作用的共产党员。“优秀共产党员”应符合一定的评定条件，并有制定的标准对其进行全面考核。"
                    android:textSize="@dimen/member_transform_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_7_right"
                android:gravity="center"
                android:text="优秀党员评议"
                android:textColor="#ffffff"
                android:textSize="@dimen/big_text" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>